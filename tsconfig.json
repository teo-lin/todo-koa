{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./build",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules",
		"test",
		"dist",
		"build",
		"out",
		"coverage",
		".vscode",
		".idea",
		".vs",
		".nyc_output",
		".sonar",
		"logs",
		"temp",
		"temp-*",
		"logs-*",
		"**/*.log",
		"**/*.pid",
		"**/*.seed",
		"**/*.pid.lock",
		"**/*.module.ts"
	]
}
