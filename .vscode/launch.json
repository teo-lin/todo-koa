			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "nodemon:app-02",
			"runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.12.2/bin/nodemon",
			"program": "${workspaceFolder}/src-02/app.js",
			"restart": true,
			"console": "integratedTerminal",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "nodemon:app-03",
			"runtimeExecutable": "${env:HOME}/.nvm/versions/node/v20.12.2/bin/nodemon",
			"program": "${workspaceFolder}/src-03/app.js",
			"restart": true,
